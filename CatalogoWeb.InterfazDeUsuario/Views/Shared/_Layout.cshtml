<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" href="~/Image/LogoZapatos.ico">
    <title>@ViewData["Title"] - Tienda MAUSHOES</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CatalogoWeb.InterfasGraficaMVC.styles.css" asp-append-version="true" />


    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Jost:wght@500;600;700&family=Open+Sans:wght@400;600&display=swap" rel="stylesheet">

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link rel="stylesheet" href="~/RecursosExternos/lib/owlcarousel/assets/owl.carousel.min.css" />

    <!-- Boostrap personalizado -->
    <link rel="stylesheet" href="~/RecursosExternos/css/style.css" />

    <!-- Letras animadas -->
    <link rel="stylesheet" href="~/RecursosExternos/letras-animadas.css" />

    <!--Iconos de bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">

</head>
<body>
    <header>
        <!-- aqui empeza el contenedor Contacto de arriba del navbar -->
        <div class="container-fluid bg-dark">
            <div class="row py-2 px-lg-5">
                <div class="col-lg-6 text-center text-lg-left mb-2 mb-lg-0">
                    <div class="d-inline-flex align-items-center text-white">
                        <small><i class="fa fa-phone-alt mr-2"></i>+503 7098-8756</small>
                        <small class="px-3">|</small>
                        <small><i class="fa fa-envelope mr-2"></i>maushoes@gmail.sv</small>
                    </div>
                </div>
                <div class="col-lg-6 text-center text-lg-right">
                    <div class="d-inline-flex align-items-center">
                        <a class="text-white px-2" href="#">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a class="text-white px-2" href="#">
                            <i class="fab fa-twitter"></i>
                        </a>
                        <a class="text-white px-2" href="#">
                            <i class="fab fa-linkedin-in"></i>
                        </a>
                        <a class="text-white px-2" href="#">
                            <i class="fab fa-instagram"></i>
                        </a>
                        <a class="text-white pl-2" href="#">
                            <i class="fab fa-youtube"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <!-- aqui termina el contenedor Contacto de arriba del navbar -->
        <!-- aqui empieza el navbar -->
        <div class="container-fluid p-0">
            <nav class="navbar navbar-expand-lg bg-white navbar-light py-3 py-lg-0 px-lg-5">
                <a class="navbar-brand ml-lg-3" asp-area="" asp-controller="Home" asp-action="Index">
                    <h1 class="m-0 text-uppercase text-primary">
                        <img src="~/Image/mau.png" alt="" width="40" height="40" class="d-inline-block align-text-top">
                        MauShoes
                    </h1>
                </a>
                <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-between px-lg-3" id="navbarCollapse">
                    <div class="navbar-nav mx-auto py-0">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index"><i class="bi bi-info-circle-fill"></i> Acerca de nosotros</a>
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index"><i class="bi bi-bag-check-fill"></i> Catalogo de productos</a>
                        <div class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown"><i class="bi bi-wrench-adjustable"></i> Administrador</a>
                            <div class="dropdown-menu m-0">
                                <a class="dropdown-item" asp-area="" asp-controller="HomeAdmin" asp-action="Index"><i class="bi bi-wrench-adjustable"></i> Administracion</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Genero" asp-action="Index"><i class="bi bi-gender-trans"></i> Genero</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Marca" asp-action="Index"><i class="bi bi-bookmark-star-fill"></i> Marcas</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Producto" asp-action="Index"><i class="bi bi-bag-check-fill"></i> Productos</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Proveedor" asp-action="Index"><i class="bi bi-person-lines-fill"></i> Proveedores</a>
                            </div>
                        </div>
                        <a href="#" class="nav-item nav-link"><i class="fa fa-phone-alt mr-2"></i> Contactanos</a>
                    </div>
                    @*<a href="" class="btn btn-primary py-2 px-4 d-none d-lg-block"><i class="bi bi-box-arrow-in-right"></i> Registrate</a>*@
                </div>
            </nav>
        </div>
        <!-- aqui termina el Navbar -->





    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>

        <!-- Back to Top -->
        <a href="#" class="btn btn-lg btn-primary rounded-0 btn-lg-square back-to-top"><i class="fa fa-angle-double-up"></i></a>

    </div>

    <footer class="border-top footer text-muted">
        <!-- Footer Start -->
        <div class="container-fluid position-relative overlay-top bg-dark text-white-50 py-5" style="margin-top: 90px;">
            <div class="container mt-5 pt-5">
                <div class="row">
                    <div class="col-md-6 mb-5">
                        <h1 class="mt-n2 text-uppercase text-white">MauShoes</h1>
                        <p class="m-0"></p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4 mb-5">
                        <h3 class="text-white mb-4">Ponte en contacto</h3>
                        <p><i class="fa fa-map-marker-alt mr-2"></i>Esfe Agape, Sonzacate, Sonsonate</p>
                        <p><i class="fa fa-phone-alt mr-2"></i>+503 24515891</p>
                        <p><i class="fa fa-envelope mr-2"></i>maushoes@gmail.sv</p>
                        <div class="d-flex justify-content-start mt-4">
                            <a class="text-white mr-4" href="#"><i class="fab fa-2x fa-twitter"></i></a>
                            <a class="text-white mr-4" href="#"><i class="fab fa-2x fa-facebook-f"></i></a>
                            <a class="text-white mr-4" href="#"><i class="fab fa-2x fa-linkedin-in"></i></a>
                            <a class="text-white" href="#"><i class="fab fa-2x fa-instagram"></i></a>
                        </div>
                    </div>
                    <div class="col-md-4 mb-5">
                        <h3 class="text-white mb-4">Navegacion</h3>
                        <div class="d-flex flex-column justify-content-start">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Acerca de nosotros</a>
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Catalogo de productos</a>
                            <div class="nav-item dropdown">
                                <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">Administrador</a>
                                <div class="dropdown-menu m-0">
                                    <a class="dropdown-item" asp-area="" asp-controller="HomeAdmin" asp-action="Index">Administracion</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="Genero" asp-action="Index">Genero</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="Marca" asp-action="Index">Marcas</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="Producto" asp-action="Index">Productos</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="Proveedor" asp-action="Index">Proveedores</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-5">
                        <h3 class="text-white mb-4">Vinculos Externos</h3>
                        <div class="d-flex flex-column justify-content-start">
                            <a class="text-white-50 mb-2" href="#"><i class="fa fa-angle-right mr-2"></i>Politicas de privacidad</a>
                            <a class="text-white-50 mb-2" href="#"><i class="fa fa-angle-right mr-2"></i>Terminos y condiciones</a>
                            <a class="text-white-50" href="#"><i class="fa fa-angle-right mr-2"></i>Contact</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container-fluid bg-dark text-white-50 border-top py-4" style="border-color: rgba(256, 256, 256, .1) !important;">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 text-center text-md-left mb-3 mb-md-0">
                        <p class="m-0">
                            Copyright; <a class="text-white" href="#">MauShoes</a>. Todos los derechos reservados.
                        </p>
                    </div>
                    <div class="col-md-6 text-center text-md-right">
                        <p class="m-0">
                            App hecha por <a class="text-white" href="https://htmlcodex.com">Equipo MauShoes</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <!-- Footer End -->
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>


    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
    <script src="~/RecursosExternos/lib/easing/easing.min.js"></script>
    <script src="~/RecursosExternos/lib/waypoints/waypoints.min.js"></script>
    <script src="~/RecursosExternos/lib/counterup/counterup.min.js"></script>
    <script src="~/RecursosExternos/lib/owlcarousel/owl.carousel.min.js"></script>

    <!-- Template Javascript -->
    <script src="~/RecursosExternos/js/main.js"></script>




    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
